  <div class="all-grades">
    <h1>
      <%= t('.grades') %>
    </h1>

    <div class="container">
      <table class="table table-hover gradeTable">
        <thead>
        <tr>
          <th> <%= t('.thead_grade') %> </th>
          <th> <%= t('.thead_lecture') %> </th>
        </tr>
        </thead>

        <tbody>
        <% if !@grades.blank? %>
          <% for item in @grades %>
            <tr>
              <td> <%= item.grade_value %> </td>
              <td> <%= item.lecture %> </td>
              <td> <%= link_to t('.remove_grade'), grades_path(@grade), method: :get,
                               data: {confirm: t('.remove_grade_confirmation')} %> </td>
            </tr>
          <% end %>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
