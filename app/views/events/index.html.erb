<%= button_to t('events.new_event'), new_event_path, method: :get, :class => 'btn btn-success btn-new-event' %>

<div class="container">
  <table class="table table-hover">
    <thead>
    <tr>
      <th> <%= t('events.date_from') %> </th>
      <th> <%= t('events.date_to') %> </th>
      <th> <%= t('events.title') %> </th>
      <th> <%= t('events.place') %> </th>
      <th> <%= t('events.participants') %> </th>
    </tr>
    </thead>

    <tbody>
    <% if !@events.blank? %>
      <% for item in @events %>
        <tr>
          <td> <%= item.date_from.strftime("%F  %T") %> </td>
          <td> <%= item.date_to.strftime("%F  %T") %> </td>
          <td> <%= item.title %> </td>
          <td> <%= item.place %> </td>
          <td>
            <% item.users.each do |user| %>
             <%= user.email %>
             <br/>
            <% end %>
          </td>
        </tr>
      <% end %>
    <% end %>
    </tbody>
  </table>
</div>
